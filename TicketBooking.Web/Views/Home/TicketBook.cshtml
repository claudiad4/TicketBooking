@model TicketBooking.Web.ViewModels.KupBiletViewModel


<div class="row mt-2">
    <div class"col-md-4">
        <div class"row">
            <img src="@Model.KoncertImage" height="200px" width="250px"/>
            <div>
                <h2>@Model.NazwaKoncertu</h2>
            </div>

        </div>

    </div>
    <div class="col-md-8">
        <form asp-action="TicketBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="KoncertImage" class="control-label"></label>
                <input asp-for="KoncertImage" class="form-control" />
                <span asp-validation-for="KoncertImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazwaKoncertu" class="control-label"></label>
                <input asp-for="NazwaKoncertu" class="form-control" />
                <span asp-validation-for="NazwaKoncertu" class="text-danger"></span>
            </div> *@
            @for (int i = 0; i < Model.SeatDetail.Count; i++)
            {
                <input type="hidden" asp-for="SeatDetail[i].Id" />

                @if (Model.SeatDetail[i].IsChecked == true)
                {
                    <input type="hidden" asp-for="SeatDetail[i].IsChecked" readonly />
                    <img src="~/SeatImage/@Model.SeatDetail[i].MiejsceImage" height="32" width="32" />
                }

                @if (Model.SeatDetail[i].IsChecked == false)
                {
                    <input type="hidden" asp-for="SeatDetail[i].IsChecked" readonly />
                    <img src="~/SeatImage/@Model.SeatDetail[i].MiejsceImage" height="32" width="32" />
                }
            }


            <div class="form-group">
                <label asp-for="KoncertDate" class="control-label"></label>
                <input asp-for="KoncertDate" class="form-control" />
                <span asp-validation-for="KoncertDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


